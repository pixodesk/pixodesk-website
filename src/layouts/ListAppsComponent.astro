---
import { marked } from "marked";
import arrowRight from "../../public/assets/index/sections/arrow-right-24x24.svg?raw";
import type { AppDescription } from "../types/types";

interface Props {
  section: AppDescription;
  bgClass?: string;
  iconBg?: string;
  iconFill?: string;
}

const { section, iconBg, iconFill, bgClass } = Astro.props;
console.log("section", section.items)
---

{section.button && (
  <a 
    class={`
      rounded-3xl 
      bg-[#ffffff11] 
      border 
      border-[#ffffff11]
      transition-all duration-300 hover:-translate-y-1 
      hover:scale-105 ${bgClass}`}
      href={section.button?.link ?? ""}
  >
      <div
        class="list-apps py-8 px-8 flex flex-col justify-between items-center h-full"
      >
        <div class="flex flex-col items-center mb-4">
          
          <div class="flex items-center">
            <div
              class=`w-[64px] h-[64px] ${iconFill} mb-6 mr-4 border border-[#ffffff11] bg-[#ffffff11] p-3 rounded-lg`
            >
              <slot />
            </div>

            <div
              class="uppercase font-bold text-lg mb-6"
              set:html={marked.parseInline(section.title ?? "")}
            />
          </div>
          {section.items && section.items.map((item) => {
            
            return (
            <div
              class="text-center pb-4 px-0 leading-5 text-base"
              set:html={marked.parseInline(item.content ?? "")}
            />
            )
          }
          )}
          
        </div>

        <div class="card-button flex flex-col items-center">
          <div class="text-white">
            
            <div class="flex justify-center items-center">
              <div class="mr-2 text-sm">{section.button?.title ?? ""}</div>
              <div class="" set:html={arrowRight} />
            </div>
              
          </div>
        </div>
      </div>
   

    </a>
  )
}

