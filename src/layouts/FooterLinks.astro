---
interface ILink {
    label: string;
    href: string;
}

interface IFooterLinks {
    title: string;
    links: ILink[];
}

const FOOTER_LINKS: IFooterLinks[] = [
    {
        title: "How to Add Lottie Animations to Your Project",
        links: [
            { label: "React Native Lottie Animation", href: "docs/mobile/react-native-lottie" },
            { label: "React Web Lottie Animation", href: "docs/web/react-lottie/" },
            { label: "Next Lottie Animation", href: "" },
            { label: "Astro Lottie Animation", href: "" },
            { label: "Vue Lottie Animation", href: "" },
            { label: "Nuxt Lottie Animation", href: "" },
        ],
    },
    // {
    //     title: "SVG Animation",
    //     links: [
    //         { label: "React Native SVG Animation", href: "" },
    //         { label: "React Web SVG Animation", href: "" },
    //         { label: "Next SVG Animation", href: "" },
    //         { label: "Astro SVG Animation", href: "" },
    //         { label: "Vue SVG Animation", href: "" },
    //         { label: "Nuxt SVG Animation", href: "" },
    //     ],
    // },
];
---

<nav 
    class="max-w-custom-narrow mx-auto text-custom-grey-200"
    style={{paddingLeft: 'var(--sl-nav-pad-x)', paddingRight: 'var(--sl-nav-pad-x)'}}
>
    <div class="grid grid-cols-1 gap-12">
        {
            FOOTER_LINKS.map((footerLinkCol) => (
                <div class="flex flex-col space-y-4 justify-center items-center ">
                    <h3 class="text-white font-bold">
                        {footerLinkCol.title}
                    </h3>
                    <ul class="
                        grid 
                        grid-cols-1 
                        md:grid-cols-2 
                        lg:grid-cols-3  
                        gap-x-10 
                        gap-y-4
                        ">
                    {footerLinkCol.links.map((link: ILink) => (
                        <li>
                            <a 
                            class="
                                text-custom-grey-400 
                                hover:text-white 
                                transition-all 
                                duration-300 
                                text-base 
                                block 
                                transform 
                                
                                "
                            href={link.href}
                            >
                                {link.label}
                            </a>
                        </li>
                    ))}
                    </ul>
                </div>
            ))
        }
    </div>
</nav>
