---
interface ILink {
    label: string;
    href: string;
}

interface IFooterLinks {
    title: string;
    links: ILink[];
}

const FOOTER_LINKS: IFooterLinks[] = [
    {
        title: "How to Add Lottie Animations to Your Project",
        links: [
            { label: "React Lottie", href: "/docs/react-lottie/" },
            { label: "Next.js Lottie", href: "/docs/nextjs-lottie/" },
            { label: "Astro Lottie", href: "/docs/astro-lottie/" },
            { label: "Vue Lottie", href: "/docs/vue-lottie/" },
            { label: "Nuxt Lottie", href: "/docs/nuxt-lottie/" },
            { label: "React Native Lottie", href: "/docs/react-native-lottie/" },
        ],
    },
];

---

<nav 
    class="max-w-custom-narrow mx-auto text-custom-grey-200"
    style={{paddingLeft: 'var(--sl-nav-pad-x)', paddingRight: 'var(--sl-nav-pad-x)'}}
>
    <div class="grid grid-cols-1 gap-12">
        {
            FOOTER_LINKS.map((footerLinkCol) => (
                <div class="flex flex-col space-y-4 justify-center items-stretch ">
                    <h3 class="text-white font-bold mb-2">
                        {footerLinkCol.title}
                    </h3>
                    <ul class="
                        grid 
                        grid-cols-1 
                        md:grid-cols-2 
                        lg:grid-cols-3  
                        gap-x-10 
                        gap-y-4
                        ">
                    {footerLinkCol.links.map((link: ILink) => (
                        <li>
                            <a 
                            class="
                                text-custom-grey-400 
                                hover:text-white 
                                transition-all 
                                duration-300 
                                text-base 
                                block 
                                transform 
                                
                                "
                            href={link.href}
                            >
                                {link.label}
                            </a>
                        </li>
                    ))}
                    </ul>
                </div>
            ))
        }
    </div>
</nav>
