---
import { marked } from "marked";

import type { Item } from "../types/types";

interface Props {
  section: Item;
  bgColor?: string;
  iconBg?: string;
  iconFill?: string;
}

const { section, iconBg, iconFill, bgColor } = Astro.props;
---

<div class=`bg-[${bgColor}] rounded-3xl mr-0 md:mr-2`>
  <div class="list-apps py-4 px-2 flex flex-col justify-center items-center ">
    
    <div class="lex flex flex-col justify-center items-center">
      <div class="mb-4 ">
        <slot />
      </div>

      <div
        class="text-2xl mb-6 text-center"
        set:html={marked.parseInline(section.title ?? "")}
      />
    </div>

    <div
      class="text-center pb-0 px-0 text-sm leading-6"
      set:html={marked.parseInline(section.content ?? "")}
    />
  </div>
</div>
