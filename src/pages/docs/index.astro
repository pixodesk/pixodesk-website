---
// src/pages/docs/index.astro
import { getCollection } from 'astro:content';
import DocsLayout from '../../layouts/DocsLayout.astro';

const allDocs = await getCollection('docs');
---

<DocsLayout currentSlug="">
  <div>
    <h1>Documentation</h1>
    <p>Welcome to the documentation. Select a topic from the sidebar to get started.</p>
    
    <div style="margin-top: 2rem;">
      <h2>Available Docs:</h2>
      <ul>
        {allDocs.map(doc => (
          <li>
            <a href={`/docs/${doc.slug}`}>{doc.data.title}</a>
            {doc.data.description && <p style="color: #666; margin: 0.25rem 0 0 0;">{doc.data.description}</p>}
          </li>
        ))}
      </ul>
    </div>
  </div>
</DocsLayout>